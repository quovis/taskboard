!!!
%html
  %head
    %link{ :rel => 'shortcut icon', :href => '/images/favicon.ico' }
    %meta{ :content => "text/html;charset=UTF-8", "http-equiv" => "content-type" }
    %title
      Agilar Taskboard - Organizations -
      = controller.action_name
    = stylesheet_link_tag 'admin'
    = javascript_include_tag :defaults
    = javascript_include_tag 'slider', 'color_picker'
  %body
    #admin-dummy-container
      = render :partial => 'layouts/admin/header', :locals => { :controller => request_controller() }
      #admin-container
        #admin-content
          #flash
            - flash.each do |status, content|
              .flash{:class => status.to_s}= content
          = yield
          = yield :sidebar
    #dummy-for-actions
    = render :partial => 'layouts/admin/dialog_background_fade'
