#form
  #form-logo= image_tag "logo-organizations.png"
  %h1.organization Create Organization
  - remote_form_for @organization, :url => organizations_path(:format => :json), :success => 'Organizations.afterCreate(request.responseText);', :failure => 'ModalDialog.displayFormErrors(request.responseJSON);' do |f|
    = render :partial => 'form', :object => f
    = f.submit