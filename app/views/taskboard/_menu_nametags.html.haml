- @users.each do |user|
  %div{ :class => 'add_nametag', :id => "add-nametag-#{user.id}", :style => "float: left; #{"border: 4px solid #a02c2c; top: -4px" if(current_user == user)}"}
    = image_tag user.avatar.url(:thumb), :title => user.name
    %br
    - if defined?(team)
      - team_id = team.id
    - else
      - team_id = nil
    .nametag.nametag_menu{ :title => user.name, :class => "#{user.color.blank? ? 'default' : "color-" + user.color }" }
      =h user.formatted_nametag(team_id)
  = draggable_element "add-nametag-#{user.id}", :revert => '"true"'
