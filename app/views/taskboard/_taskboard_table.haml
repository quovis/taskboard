#container
  %table
    %tr{ :id => 'taskboard-first-row' }
      %th{ :style => "width: 7%;" }=h name
      %th{ :style=> "width: 32%; max-width: 50%; #{taskboard_border_style(@color, [ "left", "bottom"])}"}= image_tag "taskboard_not_started.png", :alt => "Not Started"
      %th{ :style=> "width: 32%; max-width: 50%; #{taskboard_border_style(@color, [ "left", "bottom"])}"}= image_tag "taskboard_in_progress.png", :alt => "In Progress"
      %th{ :style=> "width: 25%; #{taskboard_border_style(@color, [ "left", "right", "bottom"])}"}= image_tag "taskboard_finished.png", :alt => "Finished"
    - for story in @stories_by_priority
      - if story.priority != -1
        %tr.story_holder{:id => "story-#{story.id}", 'data-story-id' => story.id, 'data-project-id' => story.project_id }
          = render :partial => "stories/show", :locals => { :story => story }
